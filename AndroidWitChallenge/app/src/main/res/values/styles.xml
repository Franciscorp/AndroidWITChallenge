<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="NormalTextListView">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name ="android:color">@color/BlackLetter</item>
        <item name ="android:textColor">@color/BlackLetter</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="SubTitleTextWeatherActivity">
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name ="android:color">@color/BlackLetter</item>
        <item name ="android:textColor">@color/BlackLetter</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="NormalTextWeatherActivity">
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name ="android:color">@color/BlackLetter</item>
        <item name ="android:textColor">@color/BlackLetter</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SecondaryRedTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name ="android:color">@color/DarkRedLetter</item>
        <item name ="android:textColor">@color/DarkRedLetter</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>